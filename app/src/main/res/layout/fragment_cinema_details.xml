        <!-- Saturday-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/saturday"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
